generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  email String @unique
}

model Transactions {
  id          Int                  @id @default(autoincrement())
  type        TransactionsType     @default(INCOME)
  description String
  category    TransactionsCategory @default(OTHER)
  date        DateTime
  amount      Int
}

enum TransactionsType {
  EXPENSE
  INCOME
}

enum TransactionsCategory {
  FOOD
  SALARY
  TRANSPORT
  SHOPPING
  ENTERTAINMENT
  HEALTH
  OTHER
}
